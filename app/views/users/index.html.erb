<% provide(:title, 'All Users') %>
<h1>All Users</h1>
<ul class="users">
<%= paginate @users %>
<% @users.each do |user| %>
	<li class="avatar"><%= gravatar_for user %> 
	<%= link_to user.name, user %> 
	<% #if current_user.admin? && !current_user?(user) %>
	 | <%= link_to "delete", method: :delete, data: {confirm: "You sure?"} %>
	<% #end %>
	</li>

<% end %>
<%= paginate @users %>
</ul>
